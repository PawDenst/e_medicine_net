@page "/calendar"
@inject IController controller
@inject IModel model

<h5>Click search to see every visit</h5>



<RadzenButton Icon="search" Text="Search" Click=@controller.ShowEveryVisitListAsync Style="        width: 160px; margin-left: 80px;
"  />

<h5 style="margin-top: 16px">Visits:</h5>

<RadzenListBox Name="visitList" Data=@model.EveryVisitList TValue="VisitData" SelectedItem=@model.SelectedVisitData Style="width: 324px; height: 240px">
    <Template Context="visitData">
        @visitData.patientName @visitData.patientSurname has visit with @visitData.doctorName @visitData.doctorSurname at @visitData.visitDate in Room @visitData.roomNumber
    </Template>
</RadzenListBox>
<div style="margin-top: 12px; width: 324px; text-align: center">
  <RadzenLink Text="Welcome to our GitLab" Path="https://www.youtube.com/watch?v=dQw4w9WgXcQ&ab_channel=RickAstleyVEVO" Target="_blank" />
</div>

@code {
  private IController controller_ = ControllerFactory.GetController( new EventDispatcher( ) );

  protected override async Task OnInitializedAsync( )
  {
    IModel model1 = controller_.Model;

    IModel model2 = controller.Model;

    IModel model3 = model;
  }
}
