@page "/reservation"
@inject IController controller
@inject IModel model
    <h2>Visit Reservation</h2>
<div class="row">
    <div class="col-xl-6">


        <h3 style="margin-top: 2rem">Doctor Name</h3>
        <RadzenTextBox @bind-Value=@model.ReservationVisitData.doctorName />
        <h3 style="margin-top: 2rem">Doctor Surname</h3>
        <RadzenTextBox @bind-Value=@model.ReservationVisitData.doctorSurname />
        <h3 style="margin-top: 2rem">Patient Name</h3>
        <RadzenTextBox @bind-Value=@model.ReservationVisitData.patientName />
        <h3 style="margin-top: 2rem">Patient Surname</h3>
        <RadzenTextBox @bind-Value=@model.ReservationVisitData.patientSurname />
        <h3 style="margin-top: 2rem">Visit Date</h3>
        <RadzenTextBox @bind-Value=@model.ReservationVisitData.visitDate />
        <h3 style="margin-top: 2rem">Room Number</h3>
        <RadzenTextBox @bind-Value=@model.ReservationVisitData.roomNumber />
        <h3 style="margin-top: 2rem"></h3>
        <RadzenButton Icon="add" Text="Reserve Visit" Click=@controller.AddVisitAsync Style="width: 190px" />

    </div>
   
</div>


<div style="margin-top: 12px; width: 324px; text-align: left">
    <RadzenLink Text="Welcome to our GitLab" Path="https://www.youtube.com/watch?v=dQw4w9WgXcQ&ab_channel=RickAstleyVEVO" Target="_blank" />
</div>


@code {
    private IController controller_ = ControllerFactory.GetController(new EventDispatcher());

    protected override async Task OnInitializedAsync()
    {
        IModel model1 = controller_.Model;

        IModel model2 = controller.Model;

        IModel model3 = model;
    }
}